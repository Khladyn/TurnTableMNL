@page
@model final_project.Pages.Shared.CDsCatalogModel
@{
    ViewData["Title"] = "CD";
}

<body>

    <div class="cont-main">

        <div class="catalog-title">
            <marquee behavior=scroll direction="left" scrollamount="18">
                <h1 id="catalog-title-text">COMPACT DISCS COMPACT DISCS COMPACT DISCS COMPACT DISCS COMPACT DISCS COMPACT DISCS COMPACT DISCS COMPACT DISCS COMPACT DISCS COMPACT DISCS COMPACT DISCS COMPACT DISCS COMPACT DISCS</h1>
            </marquee>
        </div>

        <div class="catalog-products">
            @foreach (var cd in Model.CDs)
            {
                if (cd.Type == "cd")
                {
                    <div class="product">
                        <a asp-page="/ViewProduct" asp-route-id=@cd.ProductID><img class="product-img" src="@cd.CoverArt" width="250" /></a>
                        <div class="product-details">
                            <p class="product-price">Php @cd.Price<span>.00</span></p>
                            <p class="product-album">@cd.Album</p>
                            <p class="product-artist">@cd.Artist</p>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</body>