@page
@model final_project.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}


<body class="h-100">
<h3 class="text-center text-black mt-5 p-3"> TurnTableMNL </h3>


<div class="container border p-4 col-4 d-flex flex-column gap-3">
    <form method="post">

        <div class="form-group-row p-2">
            <label asp-for="Credential.Username" class="my-2"></label>
            <input type="text" asp-for="Credential.Username" class="form-control" />
            <span asp-validation-for="Credential.Username" class="text-danger"></span>
        </div>

        <div class="form-group-row p-2">
            <label asp-for="Credential.Password"class="my-2"></label>
            <input type="password" asp-for="Credential.Password" class="form-control" />
            <span asp-validation-for="Credential.Password" class="text-danger"></span>
        </div>

        <div class="p-2">
            <input type="checkbox" asp-for="Credential.Remember" class="form-check-input" />
            <label asp-for="Credential.Remember"></label>
        </div>

        <div class="p-2 text-center">
            <input type="submit" class="btn btn-primary w-100" />
        </div>

        <div class="p-2 text-center d-flex justify-content-between">
            <a asp-page="/Registration"> New User </a>
            <a asp-page="/"> Forgot Password </a>
        </div>

    </form>
</div>
</body>