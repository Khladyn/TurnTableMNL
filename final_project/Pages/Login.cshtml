@page
@model final_project.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}


<body>
    <form method="post" autocomplete="off">

        <div class="login-title">
            <h1 id="login-title-text">@ViewData["Title"]</h1>
        </div>

        @* USERNAME *@
        <div class="form-group-row p-2">
            <label asp-for="Credential.Username" class="my-2" id="loginForm-label"></label>
            <input type="text" asp-for="Credential.Username" class="form-control" id="loginForm-textbox" />
            <span asp-validation-for="Credential.Username" class="text-danger"></span>
        </div>

        @* PASSWORD *@
        <div class="form-group-row p-2">
            <label asp-for="Credential.Password" class="my-2" id="loginForm-label"></label>
            <input type="password" asp-for="Credential.Password" class="form-control" id="loginForm-textbox" />
            <span asp-validation-for="Credential.Password" class="text-danger"></span>
        </div>

        @* LOGIN BUTTON *@
        <p class="btn-login-text">
            <input type="submit" class="btn btn-default" id="btn-login" value="Login >>" />
        </p>

        @* LINK TO REGISTRATION PAGE *@
        <p class="loginLink-text">
            Don't have an account? <a asp-page="/Registration" id="loginLink">Register here</a>.
        </p>

    </form>
</body>