@page
@model final_project.Pages.Favorites
@{
    ViewData["Title"] = "My Favorites";
}

<h2> @ViewData["Title"] </h2>

@if (Model.favorites == null || Model.favorites.Count == 0)
{
    <div class="my-5">
        <div class="my-4">
            <h6 class="text-center"> @Model.emptyFavorites </h6>
        </div>

        <div class="d-flex flex-column align-items-center gap-4">

            <a asp-page="/VinylsCatalog">
                <button class="btn btn-outline-primary">
                    Browse vinyls >>
                </button>
            </a>

            <a asp-page="/CDsCatalog">
                <button class="btn btn-outline-primary">
                    Browse CDs >>
                </button>
            </a>

            <a asp-page="/CassettesCatalog">
                <button class="btn btn-outline-primary">
                    Browse cassettes >>
                </button>
            </a>

        </div>
    </div>

} else {

<body>
    <table>
        <thead>
            <th> Cover Art </th>
            <th> Price </th>
            <th> Album </th>
            <th> Artist </th>
            <th> Type </th>
            <th> Action </th>
        </thead>
        <tbody>
            @foreach (var favorite in Model.favorites)
            {
                    <tr>
                        <td>
                            <a
                                asp-page="/ViewProduct"
                                asp-route-id=@favorite.ProductID>
                                <img
                                    src=@favorite.CoverArt
                                    alt="cover art"
                                    width="150" />
                            </a>
                        </td>
                        <td>@favorite.Price</td>
                        <td>@favorite.Album</td>
                        <td>@favorite.Artist</td>
                        <td>@favorite.Type</td>
                        <td>
                            <a asp-page="/Cart"
                               asp-page-handler="Add"
                               asp-route-id=@favorite.ProductID>
                                <button class="btn" title="Add to Cart">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cart-plus-fill" viewBox="0 0 16 16">
                                        <path d="M.5 1a.5.5 0 0 0 0 1h1.11l.401 1.607 1.498 7.985A.5.5 0 0 0 4 12h1a2 2 0 1 0 0 4 2 2 0 0 0 0-4h7a2 2 0 1 0 0 4 2 2 0 0 0 0-4h1a.5.5 0 0 0 .491-.408l1.5-8A.5.5 0 0 0 14.5 3H2.89l-.405-1.621A.5.5 0 0 0 2 1H.5zM6 14a1 1 0 1 1-2 0 1 1 0 0 1 2 0zm7 0a1 1 0 1 1-2 0 1 1 0 0 1 2 0zM9 5.5V7h1.5a.5.5 0 0 1 0 1H9v1.5a.5.5 0 0 1-1 0V8H6.5a.5.5 0 0 1 0-1H8V5.5a.5.5 0 0 1 1 0z" />
                                    </svg>
                                </button>
                            </a>
                        </td>

                        <td>
                            <a
                                asp-page="/Favorites"
                                asp-page-handler="Remove"
                                asp-route-id=@favorite.ProductID>
                                    <button class="btn text-danger" title="Remove from Favorites">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3-fill" viewBox="0 0 16 16">
                                        <path d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5Zm-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5ZM4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06Zm6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528ZM8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5Z" />
                                    </svg>
                                    </button>
                            </a>
                        </td>
                    </tr>
            }
        </tbody>
    </table>
</body>

}